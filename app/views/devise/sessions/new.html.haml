.container
  .form-signin
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = devise_error_messages!
      %h2.form-signin-heading Please sign in
      = f.label :email, autofocus: true, class: "sr-only", for: "inputEmail"
      = f.email_field :email, autofocus: false, placeholder: "Email address", autocomplete: "off", id: "inputEmail", class: "form-control", placeholder: "Email address"
      = f.label :password, class: "sr-only", for: "inputPassword"
      = f.password_field :password, placeholder: "Password", autocomplete: "off", id: "inputPassword", class: "form-control"
      .checkbox
        %label
          - if devise_mapping.rememberable?
            = f.check_box :remember_me
            = f.label :remember_me

      = f.submit "SIGN IN", class: "btn btn-lg btn-primary btn-block"
  .text-center
    %p
      Not a member?
      = link_to "Sign up now", new_user_registration_path
