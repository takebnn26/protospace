.container
  .form-signin
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %h2.form-signin-heading Please sign in
      / %label.sr-only{for: "inputEmail"} Email address
      = f.label :email, autofocus: true, class: "sr-only", for: "inputEmail"
      / %input#inputEmail.form-control{autofocus: "", placeholder: "Email address", required: "", type: "email"}/
      = f.email_field :password, autofocus: false, placeholder: "Email address", autocomplete: "off", id: "inputEmail", class: "form-control", placeholder: "Email address"
      / %label.sr-only{for: "inputPassword"} Password
      = f.label :password, class: "sr-only", for: "inputPassword"
      / %input#inputPassword.form-control{placeholder: "Password", required: "", type: "password"}/
      = f.password_field :password, placeholder: "Password", autocomplete: "off", id: "inputPassword", class: "form-control"
      / .checkbox
      /   %label
      /     %input{type: "checkbox", value: "remember-me"}/
      /     Remember me
      .checkbox
        %label
          - if devise_mapping.rememberable?
            = f.check_box :remember_me
            = f.label :remember_me

      / %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Sign in
      = f.submit "SIGN IN", class: "btn btn-lg btn-primary btn-block"
  .text-center
    %p
      Not a member?
      / %a{href: "/users/sign_in"} Sign up now
      = link_to "Sign up now", new_user_registration_path
